@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Release Date
        </dt>
        <dd class="col-sm-10">
            @Model.ReleaseDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            Rating
        </dt>
        <dd class="col-sm-10">
            @Model.Rating
        </dd>
    </dl>
</div>

@if (Model.VideoFiles != null && Model.VideoFiles.Any())
{
    <div>
        <h4>Movie Video</h4>
        <video width="600" controls>
            <source src="@Model.VideoFiles.First().FilePath" type="video/mp4">
            Your browser does not support the video tag.
        </video>
    </div>
}
else
{
    <div>
        <p>No video available for this movie.</p>
    </div>
}

<h3>Add a Review</h3>
<form asp-action="AddReview" method="post">
    <div class="form-group">
        <label for="Rating">Rating (1-5)</label>
        <input type="number" id="Rating" name="Rating" min="1" max="5" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Comment">Comment</label>
        <textarea id="Comment" name="Comment" class="form-control" rows="3" required></textarea>
    </div>
    <input type="hidden" name="MovieId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>

<h4>Reviews</h4>
<table class="table">
    <thead>
        <tr>
            <th>Rating</th>
            <th>Comment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.Reviews)
        {
            <tr>
                <td>@review.Rating</td>
                <td>@review.Comment</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
